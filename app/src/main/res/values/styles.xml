<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_1</item>
        <item name="colorPrimaryDark">@color/color_1</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowBackground">@color/color_1</item>
    </style>


    <style name="editText">
        <item name="android:textColor">@color/color_1</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/radius_generic</item>
    </style>

    <!-- Mocked Account -->
    <style name="MockedAccountLight" parent="MaterialNavigationDrawerTheme.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_1</item>
        <item name="colorPrimaryDark">@color/color_1</item>
        <item name="colorAccent">#FFFFFF</item>
        <item name="singleAccount">true</item><!-- Remove the change account button -->
    </style>

</resources>
